<h1>Burger Meister</h1>

/* Burgers waiting to be eaten */

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

/* Burgers that have been devoured */

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burger/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="new-burger">What are you hungry for?</label>
    <input type="text" id="new -burger" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
